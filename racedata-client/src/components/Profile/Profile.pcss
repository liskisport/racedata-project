.Profile {
  font-weight: 800;

  .Profile__unauthorized {
    font-size: 20px;
  }

  .Profile__authorized {
    font-size: 15px;
    min-width: 150px;
    text-align: right;

    @media(min-width: 1024px) {
      display: flex;
      align-items: center;
      text-align: left;

      &:after {
        content: '';
        display: inline-block;
        background-color: blue;
        margin-left: 12px;
        width: 64px;
        height: 64px;
      }
    }
  }
}