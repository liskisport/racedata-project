.racedata-project .Header {
  display: flex;
  align-items: center;
  height: 64px;
  font-size: 24px;
  line-height: 32px;
  padding-left: 16px;
  background-color: #f5f5f5;

  .Header__item {
    display: flex;
    align-items: center;
    margin-right: 40px;
    padding: 0 8px;
    height: 100%;

    &:last-child {
      margin-right: 0;
      margin-left: auto;
    }
  }

  .Header__item-selected {
    font-weight: 600;
    border-bottom: 4px solid #a7a7a7;
  }
}